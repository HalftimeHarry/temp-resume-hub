{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile.minimal"
  },
  "deploy": {
    "startCommand": "./pocketbase serve --http=0.0.0.0:$PORT",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
}